  type === "outline" && isLgSuccessC && (
    <button class="border-success-card text-success-card hover:bg-success-card hover:border-success-card hover:text-inline-dark rounded-sm border-2 px-8 py-4 text-lg font-medium transition-colors">
      {label}
    </button>
  )
}

{
  type === "outline" && isMdPrimaryD && (
    <button class="border-primary-dark text-primary-dark hover:bg-primary-dark hover:border-primary-dark hover:text-inline-light rounded-sm border-1 px-3 py-3 text-lg font-medium transition-colors">
      {label}
    </button>
