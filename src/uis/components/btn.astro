    </button>
  )
}
{
  type === "classic" && isLgPrimaryD && (
    <button class="bg-primary-dark text-inline-light hover:bg-primary-dark/10 hover:text-primary-dark rounded-sm px-8 py-4 text-lg font-medium transition-colors">
      {label}
    </button>
  )
}
{
  type === "classic" && isMdSuccessD && (
    <button class="bg-success-dark text-inline-light hover:bg-success-dark/10 hover:text-success-dark rounded-sm px-3 py-3 text-lg font-medium transition-colors">
      {label}
    </button>
  )
}
{
  type === "classic" && isLgSuccessD && (
    <button class="bg-success-dark text-inline-light hover:bg-success-dark/10 hover:text-success-dark rounded-sm px-8 py-4 text-lg font-medium transition-colors">
