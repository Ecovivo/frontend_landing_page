{
  type === "outline" && isLgPrimaryD && (
    <button class="border-primary-dark text-primary-dark hover:bg-primary-dark hover:border-primary-dark hover:text-inline-light rounded-sm border-2 px-8 py-4 text-lg font-medium transition-colors">
      {label}
    </button>
  )
}
{
  type === "outline" && isMdSuccessD && (
    <button class="border-success-dark text-success-dark hover:bg-success-dark hover:border-success-dark hover:text-inline-light rounded-sm border-1 px-3 py-3 text-lg font-medium transition-colors">
      {label}
    </button>
  )
}
{
  type === "outline" && isLgSuccessD && (
    <button class="border-success-dark text-success-dark hover:bg-success-dark hover:border-success-dark hover:text-inline-light rounded-sm border-2 px-8 py-4 text-lg font-medium transition-colors">
      {label}
    </button>
  )
}

{
  type === "classic" && isMdPrimaryD && (
    <button class="bg-primary-dark text-inline-light hover:bg-primary-dark/10 hover:text-primary-dark rounded-sm px-3 py-3 text-lg font-medium transition-colors">
