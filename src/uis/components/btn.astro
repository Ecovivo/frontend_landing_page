    </button>
  )
}
{
  type === "outline" && isMdSuccessC && (
    <button class="border-success-card text-success-card hover:bg-success-card hover:border-success-card hover:text-inline-dark rounded-sm border-1 px-3 py-3 text-lg font-medium transition-colors">
      {label}
    </button>
  )
}
