---
import StepByStep from "./StepByStep.astro";
import DualCta from "@uis/components/blueprints/dualCta.astro";

const Collaborative = {
  title: "Apoyo paso a paso para tu comunidad",
  description:
    "No estás solo en este camino. Nuestra app te acompaña con guías claras, recomendaciones confiables y una comunidad que comparte experiencias para que tomes las mejores decisiones para tu hogar.",
  primary_action: "Comenzar con guía",
  secondary_action: "Contactar soporte",
  additional_text: "🏪 Red de 150+ proveedores verificados en Colombia",
  items: [
    {
      icon: "🤝",
      text: "Soporte personalizado: Equipo técnico disponible para resolver dudas",
    },
    {
      icon: "📍",
      text: "Proveedores verificados: Red de instaladores y distribuidores confiables",
    },
    {
      icon: "👥",
      text: "Comunidad activa: Experiencias reales de otros usuarios colombianos",
    },
  ],
};
---

<section class="bg-block-light py-64">
  <div class="container mx-auto px-6">
    <div class="flex flex-col items-center lg:flex-row">
      <div class="mb-8 lg:mb-0 lg:w-1/2 lg:pr-12">
        <DualCta {...Collaborative} theme="success" pallette="light" />
      </div>
      <div class="lg:w-1/2">
        <StepByStep />
      </div>
    </div>
  </div>
</section>
